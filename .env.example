# TitaniumBOE-Sim Environment Configuration
# Copy this file to .env and customize for your environment
# DO NOT commit .env file to version control

# ============================================
# DEMO MODE (Testing/Development Only)
# ============================================
# Set to "true" to create sample users automatically
# NEVER enable in production environments
DEMO_MODE=true

# Demo user credentials (only used if DEMO_MODE=true)
# NOTE: Usernames must be 4 characters or less (BOE protocol requirement)
DEMO_USER_1=TRD1
DEMO_PASS_1=Pass1234!

DEMO_USER_2=TRD2
DEMO_PASS_2=Pass5678!

DEMO_ADMIN=ADMN
DEMO_ADMIN_PASS=Admin999!

# ============================================
# SERVER CONFIGURATION
# ============================================
# BOE Protocol server port
BOE_PORT=8081

# REST API server port
API_PORT=9091

# Server host (0.0.0.0 allows external connections)
BOE_HOST=0.0.0.0

# Maximum concurrent connections
MAX_CONNECTIONS=10

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Allowed CORS origins (comma-separated)
# For development: local servers
# For production: your specific domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# TLS/SSL Configuration (Production)
# TLS_ENABLED=true
# TLS_KEYSTORE_PATH=/path/to/keystore.jks
# TLS_KEYSTORE_PASSWORD=your-keystore-password

# ============================================
# DATABASE CONFIGURATION
# ============================================
# RocksDB data directory
DB_PATH=./data/cboe_server

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: SEVERE, WARNING, INFO, FINE, FINER, FINEST
LOG_LEVEL=INFO

# ============================================
# MARKET SIMULATOR
# ============================================
# Enable/disable market simulator bots
MARKET_SIMULATOR_ENABLED=true

# Number of bot traders
BOT_COUNT=5
